<div class="editProfile-wrapper">

    <div class="editProfile-window">
        <div class="editProfile-blockMain">
            <div class="editProfile-titleBlock">
                <div class="editProfile-backAarrow">
                    <i class="icono-arrow1-right"></i>
                </div>
                <h1 id="editProfile-title">{{{state.profile.edit.title}}}</h1>
            </div>

            <div class="editProfile-avaBlock">
                <div class="editProfile-avatar"></div>
                <span class="avaBlock-btn-upload-img"></span>
                <span class="editProfile-login">{{{state.profile.edit.login}}}</span>
            </div>

            <form class="editProfile-form-main">
                <div class="editProfile-labelBlock">
                    <label class="label-editProfile" for="first_name">{{{state.profile.edit.mainFormLabel}}}</label>
                </div>
                <input name="first_name" class="input-editProfile" type="text">
                <input name="last_name" class="input-editProfile" type="text"
                       placeholder={{{state.profile.edit.mainFormLastNamePlaceholderOne}}}>
                <input name="about_myself" class="input-editProfile" type="text"
                       placeholder={{{state.profile.edit.mainFormLastNamePlaceholderTwo}}}>
                <div class="editProfile-description">
                    <p class="descriptions">{{{state.profile.edit.descriptonFormMain}}}</p>
                </div>
            </form>
        </div>
        <div class="editProfile-blockSlave">
            <form class="editProfile-form-slave">
                <div class="editProfile-labelBlock">
                    <label class="label-editProfile" for="login">{{{state.profile.edit.slaveFormLabel}}}</label>
                </div>
                <input id="editProfile-formSlave-input" name="login" class="input-editProfile" type="text"
                       placeholder="{{{state.profile.edit.login}}}">
                <div class="editProfile-description">
                    <p class="descriptions">{{{state.profile.edit.discriptionFormSlaveOne}}}</p>
                    <p class="descriptions">{{{state.profile.edit.discriptionFormSlaveTwo}}}</p>
                </div>
            </form>
        </div>
        <div class="editProfile-btn-passwordChange">

            <a>
                <span class="editProfile-changePwd-btn">
                    {{{state.profile.edit.buttonPasswordChange}}}
                </span>
            </a>

        </div>

    </div>
</div>
